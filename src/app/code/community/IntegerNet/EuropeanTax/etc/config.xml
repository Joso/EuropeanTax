<?xml version="1.0"?>
<config>
    <modules>
        <IntegerNet_EuropeanTax>
            <version>0.5.0</version>
        </IntegerNet_EuropeanTax>
    </modules>
    <global>
        <models>
            <integernet_europeantax>
                <class>IntegerNet_EuropeanTax_Model</class>
            </integernet_europeantax>
            <sales>
                <rewrite>
                    <quote>IntegerNet_EuropeanTax_Model_Sales_Quote</quote>
                </rewrite>
            </sales>
        </models>
        <helpers>
            <integernet_europeantax>
                <class>IntegerNet_EuropeanTax_Helper</class>
            </integernet_europeantax>
            <customer>
                <rewrite>
                    <data>IntegerNet_EuropeanTax_Helper_Customer_Data</data>
                </rewrite>
            </customer>
        </helpers>
        <resources>
            <integernet_europeantax_setup>
                <setup>
                    <module>IntegerNet_EuropeanTax</module>
                    <class>Mage_Customer_Model_Resource_Setup</class>
                </setup>
            </integernet_europeantax_setup>
        </resources>
        <events>
            <customer_load_after>
                <observers>
                    <integernet_europeantax>
                        <type>singleton</type>
                        <class>integernet_europeantax/observer</class>
                        <method>customerLoadAfter</method>
                    </integernet_europeantax>
                </observers>
            </customer_load_after>
            <customer_address_save_after>
                <observers>
                    <customer_addres_after_save_viv_observer>
                        <class>integernet_europeantax/customer_observer</class>
                        <method>afterAddressSave</method>
                    </customer_addres_after_save_viv_observer>
                </observers>
            </customer_address_save_after>
            <sales_quote_address_save_after>
                <observers>
                    <integernet_europeantax>
                        <class>integernet_europeantax/observer</class>
                        <method>salesQuoteAddressSaveAfter</method>
                    </integernet_europeantax>
                </observers>
            </sales_quote_address_save_after>
        </events>
        <fieldsets>
            <customer_address>
                <tax_class_id>
                    <to_quote_address>*</to_quote_address>
                </tax_class_id>
            </customer_address>
        </fieldsets>
    </global>

    <adminhtml>
        <events>
            <core_block_abstract_prepare_layout_after>
                <observers>
                    <integernet_europeantax>
                        <type>singleton</type>
                        <class>integernet_europeantax/observer</class>
                        <method>coreBlockAbstractPrepareLayoutAfter</method>
                    </integernet_europeantax>
                </observers>
            </core_block_abstract_prepare_layout_after>
            <customer_group_save_before>
                <observers>
                    <integernet_europeantax>
                        <type>singleton</type>
                        <class>integernet_europeantax/observer</class>
                        <method>customerGroupSaveBefore</method>
                    </integernet_europeantax>
                </observers>
            </customer_group_save_before>

        </events>
        <translate>
            <modules>
                <integernet_europeantax>
                    <files>
                        <default>IntegerNet_EuropeanTax.csv</default>
                    </files>
                </integernet_europeantax>
            </modules>
        </translate>
    </adminhtml>

    <frontend>
        <events>
            <sales_quote_address_collect_totals_before>
                <observers>
                    <sales_customer_validate_vat_number>
                        <type>disabled</type>
                    </sales_customer_validate_vat_number>
                </observers>
            </sales_quote_address_collect_totals_before>
            <sales_quote_address_collect_totals_after>
                <observers>
                    <sales_customer_validate_vat_number>
                        <type>disabled</type>
                    </sales_customer_validate_vat_number>
                </observers>
            </sales_quote_address_collect_totals_after>
        </events>
    </frontend>
</config>